@using Animal_Shelter.Models;
@model List<Animal_Shelter.Models.Animal>;

@{
  Layout = "_Layout";
}
<div class="container">
  <h1>Animals</h1>
  @if (@Model.Count == 0)
  {
    <h3>No animals have been added yet</h3>
  }

  <ul>


  @foreach (Animal animal in Model)
  {
    <li>@Html.ActionLink($"{animal.Name}", "Details", new {id = animal.AnimalId})</li> 
  }
  </ul>

  <p>@Html.ActionLink("Add new animal", "Create")</p>
  <p>@Html.ActionLink("Look up an animal", "Search")</p>

  
